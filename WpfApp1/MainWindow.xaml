<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Hello" Content="Hello!" HorizontalAlignment="Left" Margin="62,48,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="24"/>
        <Button x:Name="Add_name" Content="Greet  me!" HorizontalAlignment="Left" Margin="556,342,0,0" VerticalAlignment="Top" FontFamily="High Tower Text" FontSize="24" Height="32" Width="213" Click="Add_name_Click"/>
        <TextBox x:Name="Greeted_people" HorizontalAlignment="Left" Margin="556,270,0,0" TextWrapping="Wrap" Text="Names" VerticalAlignment="Top" Width="213" Height="45" FontSize="16"/>
        <ListBox x:Name="List_of_names" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="62,121,325,60" IsSynchronizedWithCurrentItem="False" FontFamily="Arial Narrow" FontSize="18"/>

    </Grid>
</Window>
